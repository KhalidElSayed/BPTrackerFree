<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- Used for list text and editor text -->
	<style name="bp_text">
		<item name="android:padding">2sp</item>
		<item name="android:singleLine">true</item>
	</style>

	<!-- Used for label text -->
	<style name="bp_label" parent="bp_text" >
		<item name="android:textStyle">bold</item>
	</style>

	<!-- Style for the TextView that's shown when the list is empty  -->
	<style name="empty_list_view">
		<item name="android:gravity">center_vertical</item>
		<item name="android:padding">2sp</item>
	</style>
	
	<style name="bp_list_header">
		<item name="android:paddingTop">10sp</item>
		<item name="android:paddingBottom">10sp</item>
	</style>

	<style name="bp_list_item">
		<item name="android:padding">4sp</item>
	</style>

	<style name="bp_spinner_item" parent="bp_label">
		<item name="android:layout_margin">5sp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="bp_send_to_group">
		<item name="android:padding">4sp</item>
	</style>

	<style name="bp_send_from_group">
		<item name="android:padding">4sp</item>
	</style>
	
</resources>
