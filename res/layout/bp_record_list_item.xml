<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bp_record_list_states"
>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0,1,2,3"
        android:stretchColumns="0,1,2,3"
    >
        <TableRow
            android:id="@+id/date_time_row"
            android:layout_height="wrap_content"
        >
            <TextView
                android:text="@string/list_label_date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|right"
                android:textIsSelectable="false"
                android:textColor="@color/bp_record_list_text_states"
                style="@style/bp_label"
            />
            <TextView
                android:id="@+id/date"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|left"
                android:textIsSelectable="false"
                android:textColor="@color/bp_record_list_text_states"
                style="@style/bp_text"
            />
            <TextView
                android:text="@string/list_label_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|right"
                android:textIsSelectable="false"
                android:textColor="@color/bp_record_list_text_states"
                style="@style/bp_label"
            />
            <TextView
                android:id="@+id/time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|left"
                android:textIsSelectable="false"
                style="@style/bp_text"
                android:textColor="@color/bp_record_list_text_states"
            />
        </TableRow>
        <TableRow android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/list_label_bp"
                android:gravity="center_vertical|right"
                android:textIsSelectable="false"
                style="@style/bp_label"
                android:textColor="@color/bp_record_list_text_states"
            />
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            >
                <TextView
                    android:id="@+id/sys_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textIsSelectable="false"
                    style="@style/bp_text"
                    android:textColor="@color/bp_record_list_text_states"
                />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/bp_separator"
                    android:textIsSelectable="false"
                    android:textColor="@color/bp_record_list_text_states"
                />
                <TextView
                    android:id="@+id/dia_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical|left"
                    android:textIsSelectable="false"
                    style="@style/bp_text"
                    android:textColor="@color/bp_record_list_text_states"
                />
            </TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/list_label_pulse"
                android:gravity="center_vertical|right"
                android:textIsSelectable="false"
                style="@style/bp_label"
                android:textColor="@color/bp_record_list_text_states"
            />
            <TextView
                android:id="@+id/pulse_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|left"
                android:textIsSelectable="false"
                style="@style/bp_text"
                android:textColor="@color/bp_record_list_text_states"
            />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/note"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        style="@style/bp_item_note_text"
    />
</LinearLayout>
