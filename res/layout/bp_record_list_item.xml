<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:shrinkColumns="0,1,2,3" 
	android:stretchColumns="0,1,2,3"
>
	<TableRow
		android:id="@+id/date_time_row"
		android:layout_height="wrap_content"
	>
		<TextView 
			android:text="@string/list_label_date" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:gravity="center_vertical|right" 
			style="@style/bp_label"
		/>
		<TextView 
			android:id="@+id/date" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:gravity="center_vertical|left" 
			style="@style/bp_text" 
		/>
		<TextView 
			android:text="@string/list_label_time" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:gravity="center_vertical|right" 
			style="@style/bp_label"
		/>
		<TextView 
			android:id="@+id/time" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:gravity="center_vertical|left" 
			style="@style/bp_text" 
		/>
	</TableRow>
	<TableRow android:layout_height="wrap_content">
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/list_label_bp"
			android:gravity="center_vertical|right" 
			style="@style/bp_label" 
		/>
		<TableRow 
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
		>
			<TextView 
				android:id="@+id/sys_value" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:gravity="center_vertical|right"
				android:layout_weight="1" 
				style="@style/bp_text"
			/>
			<TextView 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:gravity="center_vertical|center_horizontal"
				android:text="@string/bp_separator" 
			/>
			<TextView 
				android:id="@+id/dia_value" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:gravity="center_vertical|left" 
				android:layout_weight="1" 
				style="@style/bp_text"
			/>
		</TableRow>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/list_label_pulse"
			android:gravity="center_vertical|right" 
			style="@style/bp_label" 
		/>
		<TextView 
			android:id="@+id/pulse_value" 
			android:layout_height="wrap_content" 
			android:layout_width="wrap_content"
			android:gravity="center_vertical|left" 
			style="@style/bp_text" 
		/>
	</TableRow>
	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/list_label_note"
			android:gravity="center_vertical|right" 
			style="@style/bp_label" 
		/>
		<TextView
			android:id="@+id/note"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:singleLine="true"
			android:gravity="center_vertical|left" 
			style="@style/bp_text" 
		/>
	</TableRow>
</TableLayout>
