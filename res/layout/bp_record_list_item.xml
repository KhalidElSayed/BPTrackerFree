<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
> 
	<TableLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:shrinkColumns="0,1,2,3" 
		android:stretchColumns="0,1,2,3"
	>
		<TableRow
			android:id="@+id/date_time_row"
			android:layout_height="wrap_content"
		>
			<TextView 
				android:text="@string/list_label_date" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:gravity="center_vertical|right" 
				style="@style/bp_label"
				android:layout_gravity="center"/>
			<TextView 
				android:id="@+id/date" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				style="@style/bp_text" 
				android:hint="Date" 
				android:gravity="center"/>
			<TextView 
				android:text="@string/list_label_time" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:gravity="center_vertical|right" 
				style="@style/bp_label"
				android:layout_gravity="center"/>
			<TextView 
				android:id="@+id/time" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				style="@style/bp_text" 
				android:hint="Time" 
				android:gravity="center"/>
		</TableRow>
		<TableRow android:layout_height="wrap_content">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/list_label_bp"
				android:gravity="center_vertical|right" 
				style="@style/bp_label" 
				android:layout_gravity="center"/>
			<TextView 
				android:id="@+id/bp_value" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				style="@style/bp_text"
				android:hint="BP" 
				android:gravity="center"/>
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/list_label_pulse"
				android:gravity="center_vertical|right" 
				style="@style/bp_label" 
				android:layout_gravity="center"/>
			<TextView 
				android:id="@+id/pulse_value" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				style="@style/bp_text" 
				android:hint="Pulse" 
				android:gravity="center"/>
		</TableRow>
	</TableLayout>
	<TextView
		android:id="@+id/note"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@style/bp_text" 
	android:hint="Note"/>
	<TextView
		android:id="@+id/dia_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
	/>
</LinearLayout>
